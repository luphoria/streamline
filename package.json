{
	"name": "streamline",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"build": "tsc && vite build",
		"preview": "vite preview",
		"dev": "concurrently -n vite,api \"vite --host\" \"npm run api\"",
		"api": "nodemon ./server/src/index.ts",
		"format": "prettier --write .",
		"lint": "eslint ./src/",
		"lint:fix": "eslint ./src/ --fix"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.0",
		"better-sqlite3": "^12.2.0",
		"dompurify": "^3.2.6",
		"dreamland": "github:MercuryWorkshop/dreamlandjs#vdom",
		"hono": "^4.9.4",
		"hono-file-router": "github:Percslol/hono-file-router",
		"honox": "^0.1.45",
		"is-mobile": "^5.0.0",
		"mime": "^4.0.7",
		"prompt-sync": "^4.2.0",
		"shell-quote": "^1.8.3",
		"try": "1.0.0-beta.10",
		"webamp": "2.2.0",
		"xp.css": "^0.2.6"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.34.0",
		"@types/eslint": "^9.6.1",
		"@types/estree": "^1.0.8",
		"@types/howler": "^2.2.12",
		"@types/msgpack-lite": "^0.1.11",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.41.0",
		"@typescript-eslint/parser": "^8.41.0",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.1",
		"eslint": "^9.34.0",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"tslib": "^2.8.1",
		"tsx": "4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.3"
	},
	"nodemonConfig": {
		"execMap": {
			"ts": "tsx"
		},
		"ext": "ts,js,json"
	}
}
