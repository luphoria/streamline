{
	"name": "streamline",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"build": "tsc && vite build",
		"preview": "vite preview",
		"dev": "concurrently -n vite,api \"vite --host\" \"npm run api\"",
		"api": "nodemon ./server/index.ts",
		"format": "prettier --config .prettierrc.js --write .",
		"lint": "eslint ./src/",
		"lint:fix": "eslint ./src/ --fix"
	},
	"dependencies": {
		"dreamland-router": "github:MercuryWorkshop/dreamland2-router",
		"dompurify": "^3.2.6",
		"dreamland": "github:MercuryWorkshop/dreamlandjs#vdom-functional",
		"express": "^5.1.0",
		"express-file-routing": "^3.1.0",
		"prompt-sync": "^4.2.0",
		"shell-quote": "^1.8.2",
		"try": "1.0.0-beta.7"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.27.0",
		"@types/eslint": "^9.6.1",
		"@types/estree": "^1.0.7",
		"@types/express": "5.0.2",
		"@types/howler": "^2.2.12",
		"@types/msgpack-lite": "^0.1.11",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.32.1",
		"concurrently": "^9.1.2",
		"dotenv": "^16.5.0",
		"eslint": "^9.27.0",
		"nodemon": "^3.1.10",
		"prettier": "^3.5.3",
		"tslib": "^2.8.1",
		"tsx": "4.19.4",
		"typescript": "^5.8.3",
		"vite": "^6.3.5"
	},
	"nodemonConfig": {
		"execMap": {
			"ts": "tsx"
		},
		"ext": "ts,js,json"
	}
}
